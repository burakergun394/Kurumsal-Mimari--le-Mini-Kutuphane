@model AuthorViewModel

@{
    ViewData["Title"] = "Add";    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


<h4 class="header">Yazar Ekle | Yazar</h4>
<hr />
    <div class=".form-area">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author.Name">Yazar Adı</label>
                <input asp-for="Author.Name" type="text" class="form-control" placeholder="Yazar adı giriniz...">
            </div>
            <div class="form-group submit">
                <input type="submit" value="Ekle" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>