@model BookAddViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h4 class="header">Kitap Ekle | Kategori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Name">Kitap Adı</label>
                <input asp-for="Book.Name" type="text" class="form-control" placeholder="Kitap adını giriniz...">
            </div>
            <div class="form-group">
                <label asp-for="BookCategories">Kategori Adı</label>
                <select asp-for="BookCategories" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id","Name"))" multiple></select>
            </div>
            <div class="form-group">
                <label asp-for="BookAuthors">Yazar Adı</label>
                <select asp-for="BookAuthors" class="form-control" asp-items="@(new SelectList(Model.Author, "Id","Name"))" multiple></select>
            </div>
            <div class="form-group">
                <label asp-for="Book.Summary">Kitap Açıklaması</label>
                <textarea asp-for="Book.Summary" class="form-control" placeholder="Kitap özetini giriniz..."></textarea>
            </div>
            <div class="form-group">
                <label class="control-label">Resim Güncelle</label>
                <input type="file" name="bookImage" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>