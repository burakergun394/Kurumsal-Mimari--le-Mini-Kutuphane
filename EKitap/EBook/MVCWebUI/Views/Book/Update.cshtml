@model BookViewModel

@{
    ViewData["Title"] = "Update";    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h4 class="header">Düzenle</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Name">Kitap Adı</label>
                <input asp-for="Book.Name" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Book.Summary">Kitap Özeti</label>
                <textarea asp-for="Book.Summary"  class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="BookCategories">Kategori Adı</label>
                <select asp-for="BookCategories" class="form-control" asp-items="@(new MultiSelectList(Model.Categories, "Id", "Name", ViewBag.SelectedCategories))" multiple></select>
            </div>
            <div class="form-group">
                <label asp-for="BookAuthors">Author Name</label>
                <select asp-for="BookAuthors" class="form-control" asp-items="@(new MultiSelectList(Model.Author, "Id", "Name", ViewBag.SelectedAuthors))" multiple>
                </select>
            </div>
            <div class="form-group d-flex flex-column">
                <label asp-for="BookImage.Path">Kitap Resmi</label>
                <img src="@Model.BookImage.Path" class="align-self-center" style="width:200px;height:200px;" alt="Alternate Text" />
            </div>
            <div class="form-group">
                <label class="control-label">Resim Güncelle</label>
                <input type="file" name="bookImage" class="form-control" />
            </div>
            <input type="hidden" asp-for="Book.Id" />
            <input type="hidden" asp-for="Book.Date" />
            <input type="hidden" asp-for="Book.Displayed" />
             <div class="form-group">
                <input type="submit" value="KAYDET" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>